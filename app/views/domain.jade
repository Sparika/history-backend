extends layout

block content
  h1= title
  each val in data
    h3 client
    - var c64 = btoa(val.client_id)
    p.
      #[a(href='/data/client/#{c64}') #{val.client_id}]

    each redirect_uri in val.redirect_uri
      p #{redirect_uri}
    h4 scope
    ul
      each scope in val.scope
        li #{scope}

    h4 claims
    ul
      each claims in val.claims
        li #{claims}

  a(href='/data') back
